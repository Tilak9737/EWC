    ViewData["Title"] = "EWC 2025 Overview";
}

<div class="container mt-4">
    <h2 class="mb-4">EWC 2025 Overview</h2>

    <div class="row text-center mb-4">
        <div class="col-md-3 p-2">
            <div class="p-3 border rounded bg-light">
                <h5>Games</h5>
                <h3 class="text-primary">15</h3>
            </div>
        </div>
        <div class="col-md-3 p-2">
            <div class="p-3 border rounded bg-light">
                <h5>Teams</h5>
                <h3 class="text-success">48</h3>
            </div>
        </div>
        <div class="col-md-3 p-2">
            <div class="p-3 border rounded bg-light">
                <h5>Days Left</h5>
                <h3 class="text-warning">127</h3>
            </div>
        </div>
        <div class="col-md-3 p-2">
            <div class="p-3 border rounded bg-light">
                <h5>Prize Pool</h5>
                <h3 class="text-danger">$15M</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Latest News</h5>
