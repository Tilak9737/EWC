<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My EWC Project</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        .my-header {
            background-color: #1a1a2e; 
        }
        
        .my-brand {
            color: #FFD700 !important; 
            font-weight: bold;
        }
        
        .my-menu-item {
            color: white !important;
            margin-right: 15px;
        }
        
        .my-menu-item:hover {
            color: #FFD700 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark my-header">
            <div class="container">
                <a class="navbar-brand my-brand" href="/">
                    EWC Dubai 2025
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#myNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link my-menu-item" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link my-menu-item" href="/Games">Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link my-menu-item" href="/Schedule">Schedule</a>
                        </li>
                    </ul>
                    
                    <div>
                        <a href="/Tickets" class="btn btn-warning btn-sm">Buy Tickets</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>