@{
    ViewData["Title"] = "EWC 2025 Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">EWC 2025 Dashboard</h2>

    <!-- Summary Cards Row -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Games</h5>
                    <p class="card-text display-6">15</p>
                    <a href="#" class="text-white small">View all games</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Teams Registered</h5>
                    <p class="card-text display-6">48</p>
                    <a href="#" class="text-white small">View teams</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Days Left</h5>
                    <p class="card-text display-6">127</p>
                    <a href="#" class="text-dark small">View schedule</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Prize Pool</h5>
                    <p class="card-text display-6">$15M</p>
                    <a href="#" class="text-white small">Details</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Updates Section -->
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Recent Announcements</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Valorant tournament format announced</h6>
                                <small>2 days ago</small>
                            </div>
                            <p class="mb-1 small">The group stage will begin on July 12th...</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">New partnership with Dubai Tourism</h6>
                                <small>5 days ago</small>
                            </div>
                            <p class="mb-1 small">Special hotel discounts for ticket holders...</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Early bird tickets sold out</h6>
                                <small>1 week ago</small>
                            </div>
                            <p class="mb-1 small">Regular tickets now available...</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links Section -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Quick Links</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">View Full Schedule</a>
                        <a href="#" class="btn btn-outline-success">Register Team</a>
                        <a href="#" class="btn btn-outline-warning">Buy Tickets</a>
                        <a href="#" class="btn btn-outline-danger">Live Stream</a>
                    </div>

                    <hr>

                    <h6 class="mt-3">Upcoming Matches</h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Team A vs Team B
                            <span class="badge bg-primary rounded-pill">Tomorrow</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Team C vs Team D
                            <span class="badge bg-primary rounded-pill">Jul 11</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>